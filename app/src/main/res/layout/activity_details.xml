<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:fitsSystemWindows="true"
    android:background="@color/detailsBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsFragment">
    <FrameLayout
        android:background="@color/detailsPhotoBackground"
        android:id="@+id/details_header"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailPhotoTitle"
            android:id="@+id/detail_photo_title" />
        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/close_photo_viewer"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/ic_close"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="30dp" />
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:id="@+id/detail_slider_holder"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_height="0dp">
        <android.support.v4.view.ViewPager
            android:clickable="true"
            android:id="@+id/photo_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/detailsPhotoBackground"
        android:id="@+id/details_footer"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:src="@mipmap/ic_plus_one"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@mipmap/ic_message"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@mipmap/ic_plus"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@mipmap/ic_share"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>
